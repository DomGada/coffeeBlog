<% layout('layout/boilerplate')%>
<h1 class="text-center">California Coffee Shops</h1>
<div class="justify-content-center d-flex">
    <a class="btn btn-primary shadow-sm p-3 mb-2" href="/coffeeshops/new">Write about a new shop?</a>
</div>

<% for( let shop of coffeeshops)  {%>
<div class="card mt-2 shadow-lg p-3 bg-body rounded">
    <div class="row">
        <div class="col-md-4">
            <img class="img-fluid" src="<%= shop.image%>" alt="">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title"><%=shop.shopN%></h5>
                <p class="card-text"><%=shop.description%></p>
                <p class="card-text">
                    <small class="text-muted"><%=shop.location%></small>
                </p>
                <a class="btn btn-primary" href="<%=shop.website%>"><%=shop.shopN%></a>
                <a class="card-link btn btn-darkB" href="/coffeeshops/<%=shop._id%>">More Info</a>
            </div>
        </div>
    </div>
</div>
<% } %>